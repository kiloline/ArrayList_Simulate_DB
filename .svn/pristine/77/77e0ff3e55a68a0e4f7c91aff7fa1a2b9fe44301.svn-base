                if (listnames.indexOf(s_vertical[loop]) != -1)
                    Return.add(s_vertical[loop]);
            } else if (this.tm.getAttribute(s_vertical[loop]) != null)
                Return.add(s_vertical[loop]);
        }
        return Return;
