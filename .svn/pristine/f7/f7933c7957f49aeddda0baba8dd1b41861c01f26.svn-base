            throw new ILlength_error();
        setData(TableMap);
        checkListname_beingness(s_vertical);
        cleanData();
        thisTable.reSize(Size+1);
        thisTable.realloc();
        LinkedList<String> lnList=new LinkedList<>(TableMap.keySet());
        //for(int loop=0;loop<s_vertical.length;loop++)
